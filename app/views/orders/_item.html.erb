<tr>
  <% @order.line_items.each do |line_item| %>
    <td><%= image_tag line_item.product.image.tiny %></td>
    <td>
    <h3><%=line_item.product.name%></h3>
    <p><%=line_item.product.description%></p>
    </td>
    <td>
      <%= line_item.quantity %>
    </td>
    <td><%= humanized_money_with_symbol line_item.total_price_cents / 100 %></td>
  <%end%>
  
</tr>